<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="327dp"
        android:layout_height="157dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <!-- Check/Reload Balance Button -->

    <!-- Profile Button -->

    <!-- Payment Page Button -->

    <!-- Card History Button -->

    <Button
        android:id="@+id/PaymentButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="16dp"
        android:text="Payment Page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CheckBalanceButton" />

    <Button
        android:id="@+id/CardHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card History"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="507dp" />

    <Button
        android:id="@+id/CheckBalanceButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="132dp"
        android:text="Check/Reload Balance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <Button
        android:id="@+id/ProfileButton"
        android:layout_height="wrap_content"
        android:layout_height="50dp"
        android:text="Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="397dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
